 <form {{ on "submit" this.submitChanges }}>
  <div class="field">
    <label>Title:</label>
    <Input type="text" placeholder="Title" @value={{this.title}} />
  </div>
  <div class="field">
    <label>ISBN:</label>
    <Input type="text" placeholder="ISBN" @value={{this.isbn}} />
  </div>
  <div class="field">
    <label>Publish Date</label>
    <Input type="date" placeholder="Publish Date" @value={{this.publishDate}} />
  </div>
  <div class="field">
    <label>Author:</label>
    <p class="control">
      <PowerSelect
        @selected={{this.author}}
        @searchEnabled={{true}}
        @search={{this.searchAuthor}}
        @onChange={{fn (mut this.author)}} as |author|>
        {{author.last}}, {{author.first}}
      </PowerSelect>
    </p>
  </div>

  <div class="field">
    <label>Don't See Your Author?</label>
    <NewAuthorModal @onsave={{fn (mut this.author)}} />
  </div>
  <div class="form-footer">
    <button type="submit" class="btn-submit">Save</button>
  </div>
</form>